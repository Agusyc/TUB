# -*- coding: utf-8 -*-
from telethon import events
import math_handler

def register(client):
    @client.on(events.NewMessage(outgoing=True, pattern='^\\!solve (.*) ?= ?(.*)'))
    async def solve_handler(event):
        first_member = event.pattern_match.group(1)
        second_member = event.pattern_match.group(2)
        await event.reply(math_handler.solve_equation(first_member, second_member))
